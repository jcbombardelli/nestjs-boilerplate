{
  "name": "chaingrid-backend-nestjs",
  "version": "0.1.0",
  "description": "",
  "author": "JC Bombardelli",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "cross-env NODE_ENV=development nest start --watch",
    "start:debug": "cross-env NODE_ENV=development nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "test": "cross-env NODE_ENV=development jest",
    "test:watch": "cross-env NODE_ENV=development jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "cross-env DEBUG=* node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "ts-node ./node_modules/typeorm/cli.js",
    "typeorm:create": "DB_SCHEMA=postgres ts-node --transpile-only ./node_modules/typeorm/cli.js query --config ./src/configs/orm.config.js \"CREATE DATABASE \\\"${DB_SCHEMA}\\\"\"",
    "typeorm:drop": "ts-node --transpile-only ./node_modules/typeorm/cli.js schema:drop --config ./src/configs/orm.config.js",
    "typeorm:seed": "ts-node --transpile-only ./node_modules/typeorm-seeding/dist/cli.js seed -n ./src/configs/orm.config.js",
    "typeorm:migration:run": "ts-node --transpile-only ./node_modules/typeorm/cli.js migration:run --config ./src/configs/orm.config.js",
    "typeorm:migration:revert": "ts-node --transpile-only ./node_modules/typeorm/cli.js migration:revert --config ./src/configs/orm.config.js",
    "typeorm:migration:generate": "ts-node --transpile-only ./node_modules/typeorm/cli.js migration:generate --config ./src/configs/orm.config.js -n",
    "typeorm:migration:create": "ts-node --transpile-only ./node_modules/typeorm/cli.js migration:create --config ./src/configs/orm.config.js -n",
    "setup:dev": "npm run typeorm:drop && npm run typeorm:migration:run && npm run typeorm:seed",
    "prepare": "husky install"
  },
  "dependencies": {
    "@nestjs/common": "^8.3.0",
    "@nestjs/core": "^8.3.0",
    "@nestjs/jwt": "^8.0.0",
    "@nestjs/passport": "8.1.0",
    "@nestjs/platform-express": "^8.3.0",
    "@nestjs/swagger": "^5.2.0",
    "@nestjs/typeorm": "^8.0.3",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "cache-manager": "^3.6.0",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.13.2",
    "cookie-parser": "^1.4.5",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "jwks-rsa": "^2.0.4",
    "passport": "^0.5.2",
    "passport-http": "^0.3.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^8.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7",
    "swagger-ui-express": "^4.1.4",
    "ts-node": "^8.6.2",
    "typeorm": "^0.2.24",
    "typeorm-seeding": "^1.6.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@nestjs/cli": "^8.2.1",
    "@nestjs/schematics": "^8.0.6",
    "@nestjs/testing": "^8.3.0",
    "@types/bcrypt": "^3.0.0",
    "@types/cache-manager": "^3.4.2",
    "@types/express": "^4.17.8",
    "@types/faker": "^4.1.12",
    "@types/jest": "25.2.3",
    "@types/node": "^17.0.17",
    "@types/passport-jwt": "^3.0.3",
    "@types/passport-local": "^1.0.33",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "8.9.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "husky": "^7.0.1",
    "jest": "27.5.1",
    "lint-staged": "^11.1.1",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "27.1.3",
    "ts-loader": "^6.2.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.5.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix"
    ]
  }
}
